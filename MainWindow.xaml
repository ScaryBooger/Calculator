<Window x:Class="WpfApp13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp13"
        mc:Ignorable="d"
	Title="계산기" Height="600" Width="400">    <DockPanel LastChildFill="True">        <Grid Height="100" DockPanel.Dock="Top">            <TextBox x:Name="textbox_result" FontSize="16" HorizontalContentAlignment="Right" Margin="15,15,15,0" Height="85" VerticalAlignment="Top" BorderThickness="0"></TextBox>            <TextBox x:Name="textbox_input" FontSize="43" HorizontalContentAlignment="Right" Margin="15,50,15,0" VerticalContentAlignment="Bottom" Text="0" BorderThickness="0"></TextBox>        </Grid>           <Grid>            <Grid.ColumnDefinitions>                <ColumnDefinition/>                <ColumnDefinition Width="*"/>                <ColumnDefinition/>                <ColumnDefinition/>            </Grid.ColumnDefinitions>            <Grid.RowDefinitions>                <RowDefinition/>                <RowDefinition/>                <RowDefinition/>                <RowDefinition/>                <RowDefinition/>                <RowDefinition/>            </Grid.RowDefinitions>            <Button Grid.Row="0" Grid.Column="0" Margin="2,1,1,1" FontSize="18" BorderThickness="0" Content="%" x:Name="btnpct" Click="btn_click_percent">            </Button>            <Button Grid.Row="0" Grid.Column="1" Margin="2,1,1,1" FontSize="18" BorderThickness="0" Content="√" x:Name="btnroot" Click="btn_click_sqrt">            </Button>            <Button Grid.Row="0" Grid.Column="2" Margin="2,1,1,1" FontSize="18" BorderThickness="0" Content="X2" x:Name="btndouble" Click="btn_click_sqr">            </Button>            <Button Grid.Row="0" Grid.Column="3" Margin="2,1,1,1" FontSize="18" BorderThickness="0" Content="1/X" x:Name="btcrecip" Click="btn_click_recip">            </Button>            <Button Grid.Row="1" Grid.Column="0" Margin="2,1,1,1" FontSize="18" BorderThickness="0" Content="CE" x:Name="btnce" Click="btn_click_clearall">            </Button>            <Button Grid.Row="1" Grid.Column="1" Margin="2,1,1,1" FontSize="18" BorderThickness="0" Content="C" x:Name="btnc" Click="btn_click_clear">            </Button>            <Button Grid.Row="1" Grid.Column="2" Margin="2,1,1,1" FontSize="18" BorderThickness="0" Content="&lt;-" x:Name="btndelet" Click="btn_click_back">            </Button>            <Button Grid.Row="1" Grid.Column="3" Margin="2,1,1,1" FontSize="18" BorderThickness="0" Content="÷" x:Name="btndivide" Click="btn_click_op">            </Button>            <Button Grid.Row="2" Grid.Column="0" Margin="2,1,1,1" FontSize="18" Content="7" BorderThickness="0" Background="#FFFFE0E0" Click="btn_click">            </Button>            <Button Grid.Row="2" Grid.Column="1" Margin="2,1,1,1" FontSize="18" Content="8" BorderThickness="0" Background="#FFFFE0E0" Click="btn_click">            </Button>            <Button Grid.Row="2" Grid.Column="2" Margin="2,1,1,1" FontSize="18" Content="9" BorderThickness="0" Background="#FFFFE0E0" Click="btn_click">            </Button>            <Button x:Name="btntimes" Grid.Row="2" Grid.Column="3" Margin="2,1,1,1" FontSize="18" BorderThickness="0" Content="*" Click="btn_click_op">            </Button>            <Button Grid.Row="3" Grid.Column="0" Margin="2,1,1,1" FontSize="18" Content="4" BorderThickness="0" Background="#FFFFE0E0" Click="btn_click">            </Button>            <Button Grid.Row="3" Grid.Column="1" Margin="2,1,1,1" FontSize="18" Content="5" BorderThickness="0" Background="#FFFFE0E0" Click="btn_click">            </Button>            <Button Grid.Row="3" Grid.Column="2" Margin="2,1,1,1" FontSize="18" Content="6" BorderThickness="0" Background="#FFFFE0E0" Click="btn_click">            </Button>            <Button x:Name="btnminus" Grid.Row="3" Grid.Column="3" Margin="2,1,1,1" FontSize="18" BorderThickness="0" Content="-" Click="btn_click_op">            </Button>            <Button Grid.Row="4" Grid.Column="0" Margin="2,1,1,1" FontSize="18" Content="1" BorderThickness="0" Background="#FFFFE0E0" Click="btn_click">            </Button>            <Button Grid.Row="4" Grid.Column="1" Margin="2,1,1,1" FontSize="18" Content="2" BorderThickness="0" Background="#FFFFE0E0" Click="btn_click">            </Button>            <Button Grid.Row="4" Grid.Column="2" Margin="2,1,1,1" FontSize="18" Content="3" BorderThickness="0" Background="#FFFFE0E0" Click="btn_click">            </Button>            <Button x:Name="btnplus" Grid.Row="4" Grid.Column="3" Margin="2,1,1,1" FontSize="18" BorderThickness="0" Content="+" Click="btn_click_op">            </Button>            <Button x:Name="btnplusminus" Grid.Row="5" Grid.Column="0" Margin="2,1,1,1" FontSize="18" BorderThickness="0" Content="±" Click="btn_plusminus" >            </Button>            <Button Grid.Row="5" Grid.Column="1" Margin="2,1,1,1" FontSize="18" Content="0" BorderThickness="0"  Background="#FFFFE0E0" Click="btn_click">            </Button>            <Button x:Name="btndot" Grid.Row="5" Grid.Column="2" Margin="2,1,1,1" FontSize="18" BorderThickness="0" Content="." Click="btn_dot">            </Button>            <Button x:Name="btnequal" Grid.Row="5" Grid.Column="3" Margin="2,1,1,1" FontSize="18" BorderThickness="0" Content="="  Click="btn_equal">            </Button>        </Grid>
    </DockPanel>
</Window>
